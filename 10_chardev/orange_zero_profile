standalone_toolchain=${ORANGE_CROSS_TOOLCHAIN_ROOT}
target_host=arm-buildroot-linux-uclibcgnueabihf
cc_compiler=gcc
cxx_compiler=g++

[env]
CONAN_CMAKE_FIND_ROOT_PATH=$standalone_toolchain/$target_host
CONAN_CMAKE_SYSROOT=$standalone_toolchain
PATH=[$standalone_toolchain/bin]
CHOST=$target_host
AR=$target_host-ar
AS=$target_host-as
RANLIB=$target_host-ranlib
LD=$target_host-ld
STRIP=$target_host-strip
CC=$target_host-$cc_compiler
CXX=$target_host-$cxx_compiler
CXXFLAGS=-I"$standalone_toolchain/lib/include"

[settings]
# We are cross-building to Linux ARM
os=Linux
arch=armv7hf
compiler=gcc
compiler.version=10.3
compiler.libcxx=libstdc++11
build_type=Release

